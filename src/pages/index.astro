---
import Layout from "../layouts/Layout.astro";
---

<Layout showfooter={false} mainClass="center">
  <a href="/home_page" id="go_home_page" style="display: none;"></a>
  <div id="intampinare">
    Bună, bobocule, și bine ai venit pe tărâmul facultății!
  </div>
</Layout>

<style>
  #intampinare {
    font-size: clamp(1.5rem, 6vw, 4.5rem);
    font-family: "Poppins";
    font-weight: 500;
    text-align: center;
    color: hsl(349, 70%, 80%);
    justify-content: center;
  }
</style>

<script>
  addEventListener("load", () => {
    setTimeout(() => {
      const link = document.getElementById("go_home_page");
      if (link) link.click();
    }, 3_000);
  });
</script>

