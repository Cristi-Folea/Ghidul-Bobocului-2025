---

{
  Array.from({ length: number_of_pages }).map((_, i) => {
    const page_number = i + 1;
    const front_img = `../media/pagini_carte/ghid-${2 * page_number - 1}.webp`;
    const back_img = `../media/pagini_carte/ghid-${2 * page_number}.webp`;
    const is_cuprins = 2 * page_number === 6;

    return (
      <Page
        page_number={page_number}
        front_img={front_img}
        back_img={back_img}
        pagina_cuprins={is_cuprins ? "true" : "false"}
      />
    );
  })
}
